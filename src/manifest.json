{
  "name": "Marktone",
  "version": "1.2.1",
  "manifest_version": 2,
  "description": "Change a Rich Text input area on kintone https://kintone.cybozu.co.jp/ to the Markdown input area.",
  "homepage_url": "https://github.com/ganta/chrome-extension-marktone",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Marktone"
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "activeTab",
    "https://*.cybozu.com/k/*",
    "https://*.cybozu-dev.com/k/*",
    "https://*.kintone.com/k/*",
    "https://*.kintone-dev.com/k/*",
    "https://*.cybozu.cn/k/*",
    "https://*.cybozu-dev.cn/k/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.cybozu.com/k/*",
        "https://*.cybozu-dev.com/k/*",
        "https://*.kintone.com/k/*",
        "https://*.kintone-dev.com/k/*",
        "https://*.cybozu.cn/k/*",
        "https://*.cybozu-dev.cn/k/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}
