{
  "manifest_version": 3,
  "name": "Marktone",
  "version": "1.7.2",
  "description": "Change a Rich Text input area on kintone https://kintone.cybozu.co.jp/ to the Markdown input area.",
  "homepage_url": "https://github.com/ganta/marktone",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "assets/*", "js/initialization.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.cybozu.com/k/*",
        "https://*.cybozu-dev.com/k/*",
        "https://*.kintone.com/k/*",
        "https://*.kintone-dev.com/k/*",
        "https://*.cybozu.cn/k/*",
        "https://*.cybozu-dev.cn/k/*"
      ],
      "js": ["content-loader.js"],
      "css": ["content.css"],
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Marktone"
  }
}
