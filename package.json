    "gemoji": "8.1.0",
    "highlight.js": "11.11.1",
    "marked": "15.0.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@babel/core": "7.26.9",
