{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      ".storybook/**/*",
      "public/**/*",
      "scripts/**/*",
      "src/**/*",
      "tests/**/*",
      "*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "formatter": {
    "enabled": false
  }
}
